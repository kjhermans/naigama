#include \"naie_private.h\"

static
char opcodestring[ 16 ];

/**
 * Returns a string value for each opcode.
 * This C file is automatically generated.
 */
char* naie_instr_string
  (uint32_t opcode)
{
  switch (opcode) {
";

foreach my $opcode (sort(keys(%{$instrhash}))) {
  my $instr = $instrhash->{$opcode};
  print "    case OPCODE_" . uc($opcode) . ": return \"" . uc($opcode) . "\";\n";
}

print "  }
  snprintf(opcodestring, sizeof(opcodestring), \"0x%.6x\", opcode);
  return opcodestring;
}
";

1;
